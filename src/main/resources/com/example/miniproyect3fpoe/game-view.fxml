<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.miniproyect3fpoe.controller.GameController">
    <children>
        <!-- Tablero del jugador -->
        <GridPane fx:id="ownBoardGrid" gridLinesVisible="true" layoutX="50.0" layoutY="50.0" prefWidth="300.0" prefHeight="300.0" />

        <!-- Tablero de la máquina -->
        <GridPane fx:id="machineBoardGrid" gridLinesVisible="true" layoutX="400.0" layoutY="50.0" prefWidth="300.0" prefHeight="300.0" />

        <!-- Label centrado debajo de los tableros -->
        <Label fx:id="resultLabel" text="" style="-fx-font-size: 14px; -fx-font-weight: bold;" layoutX="275.0" layoutY="380.0" />

        <!-- Botón alineado a la derecha -->
        <Button fx:id="viewMachineBoardButton" text="View Machine Board" layoutX="550.0" layoutY="400.0" onAction="#handleViewMachineBoard" />
    </children>
</AnchorPane>
