<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>

<HBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.miniproyect3fpoe.controller.GameController" spacing="10" alignment="CENTER">
    <children>
        <GridPane fx:id="ownBoardGrid" gridLinesVisible="true" prefWidth="400" prefHeight="400" />
        <GridPane fx:id="machineBoardGrid" gridLinesVisible="true" prefWidth="400" prefHeight="400" />
        <Button fx:id="viewMachineBoardButton" text="View Machine Board" onAction="#handleViewMachineBoard" />
    </children>
</HBox>
